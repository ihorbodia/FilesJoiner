<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="FileJoiner.Views.MainDataView">
	<Border DragDrop.AllowDrop="True">
		<DataGrid Name="mainDataGrid">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="8*" />
				<DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="1*" />
				<DataGridTextColumn Header="Size" Binding="{Binding Size}" Width="1*" />
			</DataGrid.Columns>
		</DataGrid>
	</Border>
</UserControl>