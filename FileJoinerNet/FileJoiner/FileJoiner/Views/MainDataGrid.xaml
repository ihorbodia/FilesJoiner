<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="FileJoiner.Views.MainDataGrid">
<Border Padding="5" DragDrop.AllowDrop="True">
	<DataGrid Name="mainDataGrid" Margin="3">
		<DataGrid.Columns>
			<DataGridTextColumn Header="File name" Binding="{Binding Name}" Width="8*" />
			<DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="1*" />
			<DataGridTextColumn Header="Size (KB)" Binding="{Binding Size}" Width="1*" />
		</DataGrid.Columns>
	</DataGrid>
</Border>
</UserControl>
